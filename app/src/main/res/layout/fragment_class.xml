<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".ClassFragment">

    <TextView
        android:id="@+id/Header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="New Class List" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/Header1"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        />

    <ListView
        android:id="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseSpinner"
        android:layout_marginTop="50dp"
        android:background="@drawable/list_item_background"
        android:dividerHeight="2dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/IconAddClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Add a new class"
        android:elevation="0dp"
        android:onClick="onAddClassButtonClick"
        app:icon="@drawable/ic_input_add"
        app:iconSize="45dp"
        app:iconTint="@color/action_bar" />

</RelativeLayout>